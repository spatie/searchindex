{
    "name": "spatie/searchindex",
    "homepage": "https://github.com/spatie/searchindex",
    "description": "Store and retrieve objects from Elasticsearch or Algolia",
    "keywords":
    [
        "search",
        "index",
        "elasticsearch",
        "algolia",
        "laravel"
    ],
    "license": "MIT",
    "require": {
        "php": ">=5.5.0",
        "illuminate/support": "^5.1"
    },
    "suggest": {
        "elasticsearch/elasticsearch": "Install if you want use Elasticsearch as your search index. Use version constraint ^1.3",
        "algolia/algoliasearch-client-php": "Install if you want use Algolia as your search index"
    },
    "require-dev": {
        "phpspec/phpspec": "^2.1",
        "phpunit/phpunit" : "4.*",
        "elasticsearch/elasticsearch": "^1.3",
        "algolia/algoliasearch-client-php": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\SearchIndex\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\SearchIndex\\Test\\": "tests"
        }
    },
    "minimum-stability": "stable"
}
